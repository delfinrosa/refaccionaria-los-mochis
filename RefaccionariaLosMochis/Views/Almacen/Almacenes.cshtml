
@{
    ViewBag.Title = "Almacenes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/CssGeneral/General.css" rel="stylesheet" />

<div class="card-header" style="margin-top:15px;">
    <h2 class="display-4">Almacen</h2>
</div>
<div class="card" style="margin-bottom:10px;">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-auto">
                <div id="buscador">
                    <div class="input-group rounded-2 bg-primary">
                        <input id="txtBusqueda" type="text" class="form-control form-control-sm" placeholder="Buscar Almacen" autocomplete="off">
                        <button id="btn-BuscarBuscador" class="btn btn-sm" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <div id="BusquedaAlmacen" style="position:absolute">
                        <div id="botonesPaginado" class="autocomplete-options" style="display: none;">
                        </div>
                        <div id="opcionesLista" class="autocomplete-options" style="display: none;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-auto ">
                <div>
                    @*<button id="btn-Nuevo" type="button" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Nuevo</button>
                        <button id="btn-Eliminar" type="button" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Eliminar</button>*@
                    <span id="modo" class="animacion-editar rounded-2 fw-bold" style="display: none;"> Editando <i id="icono-modo" class="fas fa-edit"></i> </span>
                </div>
            </div>
        </div>

    </div>
</div>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="tabDatosAlmacen-tab" data-bs-toggle="tab" data-bs-target="#tabDatosAlmacen" type="button" role="tab" aria-controls="tabDatosAlmacen" aria-selected="true">
            Datos Almacen
            <span id="SpantabDatosAlmacen" class="badge rounded-5 bg-danger"></span>
        </button>
    </li>
    <li class="nav-item" role="presentation" id="BotonDeRacks">
        <button class="nav-link" id="tabDatosRack-tab" data-bs-toggle="tab" data-bs-target="#tabDatosRack" type="button" role="tab" aria-controls="tabDatosRack" aria-selected="false">
            Datos Rack
            <span id="SpantabDatosRack" class="badge rounded-5 bg-danger"></span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="tabDatosAlmacenSeccion-tab" data-bs-toggle="tab" data-bs-target="#tabDatosAlmacenSeccion" type="button" role="tab" aria-controls="tabDatosAlmacenSeccion" aria-selected="false">
            Datos Seccion
            <span id="SpantabDatosAlmacenSeccion" class="badge rounded-5 bg-danger"></span>
        </button>
    </li>
</ul>

<div class="tab-content">

    <div class="tab-pane active container-fluid" id="tabDatosAlmacen" role="tabpanel" aria-labelledby="home-tab">
        <button id="btn-NuevoAlmacen" type="button" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Nuevo</button>
        <button id="btn-EliminarAlmacen" type="button" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Eliminar</button>
        <fieldset>
            <div class="row">
                <div class="col-sm-6 ">
                    <div class="row p-1">
                        <label for="txtRegistroidAlmacen" class="col-sm-2 col-form-label col-form-label-sm">Identificador</label>
                        <div class="col-sm-10">
                            <input id="txtRegistroidAlmacen" class=" form-control form-control-sm" type="number" value="0" placeholder="AutoNumerico" disabled>
                        </div>
                    </div>
                    <div class="row p-1">
                        <label for="txtRegistroUbicacionAlmacen" class="col-sm-2 col-form-label col-form-label-sm">Ubicacion Almacen</label>
                        <div class="col-sm-10">
                            <input class=" form-control" type="text" id="txtRegistroUbicacionAlmacen" name="Ubicacion" autocomplete="off" data-requerido="Ubicacion Almacen" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <div class="row p-1">
                        <label for="txtRegistroDescripcionAlmacen" class="col-sm-2 col-form-label col-form-label-sm">Descripcion Almacen</label>
                        <div class="col-sm-10">
                            <textarea id="txtRegistroDescripcionAlmacen" class=" form-control form-control-sm" name="Descripcion" type="text" style="height: 80px; " data-requerido="Descripcion Almacen"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>

        <div style="text-align:right; margin-top:10px;">
            <button id="btn-GuardarAlmacen" type="button" class="btn btn-success btn-sm x-2"><i class="fas fa-play"></i> Guardar</button>
            <button disabled id="btn-CancelarAlmacen" type="button" class="btn btn-secondary btn-sm"><i class="fas fa-times"></i> Cancelar</button>
        </div>

    </div>


    <div class="tab-pane  container-fluid" id="tabDatosRack" role="tabpanel" aria-labelledby="home-tab">
        <button id="btn-NuevoRack" type="button" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Nuevo</button>
        <button id="btn-EliminarRack" type="button" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Eliminar</button>
        <h3 class="text-center" id="AlmacenSeleccionado"> </h3>
        <fieldset>
            <div class="row">
                <div class="col-sm-6 ">
                    <div class="row p-1">
                        <label for="txtRegistroidAlmacenRack" class="col-sm-2 col-form-label col-form-label-sm">Identificador</label>
                        <div class="col-sm-10">
                            <input id="txtRegistroidAlmacenRack" class=" form-control form-control-sm" type="number" value="0" placeholder="ID" name="ID" autocomplete="off">
                        </div>
                    </div>
                    <div class="row p-1">
                        <label for="txtRegistroUbicacionAlmacenRack" class="col-sm-2 col-form-label col-form-label-sm">Nombre Rack</label>
                        <div class="col-sm-10">
                            <input class=" form-control" type="text" id="txtRegistroUbicacionAlmacenRack" name="Ubicacion" placeholder="Nombre" autocomplete="off" />
                        </div>
                    </div>

                    <div class="row p-1">
                        <label for="txtRegistroAlmacenRack" class="col-sm-2 col-form-label col-form-label-sm">Almacen</label>
                        <div class="col-sm-10">
                            <input class=" form-control" type="text" id="txtRegistroAlmacenRack" name="Almacen" disabled autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <div class="row p-1">
                        <label for="txtRegistroDescripcionAlmacenRack" class="col-sm-2 col-form-label col-form-label-sm">Descripcion Rack</label>
                        <div class="col-sm-10">
                            <textarea id="txtRegistroDescripcionAlmacenRack" placeholder="Descripcion Rack" name="Descripcion" class="form-control form-control-sm" type="text" style="height: 80px; " autocomplete="off"></textarea>
                        </div>
                    </div>

                </div>
            </div>
        </fieldset>

        <div style="text-align:right; margin-top:10px;">
            <button id="btn-GuardarRack" type="button" class="btn btn-success btn-sm x-2"><i class="fas fa-play"></i> Guardar</button>
            <button disabled id="btn-CancelarRack" type="button" class="btn btn-secondary btn-sm"><i class="fas fa-times"></i> Cancelar</button>
        </div>
        <hr />
        <div>
            <table id="tRacks" class="table">
                <thead>
                    <tr>
                        <th>ID Rack</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>




    </div>


    <div class="tab-pane  container-fluid" id="tabDatosAlmacenSeccion" role="tabpanel" aria-labelledby="home-tab">


        <div class="container">
            <table class="table" id="tSeccionesInformacion">
                <thead>
                    <tr>
                        <th style="border-right: 2px solid #000;">Almacén</th>
                        <th style="border-right: 2px solid #000;">Rack</th>
                        <th>Sección</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="col-3" style="border-right: 2px solid #000;">
                            <input type="text" id="inputAlmacen" class="form-control" placeholder="Selecciona un Almacén" autocomplete="off" disabled>
                            <div id="listaAlmacenes" class="lista-almacenes col-12" "></div>
                        </td>
                        <td class="col-3" style="border-right: 2px solid #000;">
                            <input type="text" id="inputRack" class="form-control" placeholder="Selecciona un Rack" autocomplete="off">
                            <div id="listaRacks" class="lista-racks col-12"></div>
                        </td>

                        <td class="col-5">
                            <div class="row">
                                <div class="col-4">
                                    <input id="txtRegistroIdSeccion" type="text" class="form-control" placeholder="ID" autocomplete="off" />
                                </div>
                                <div class="col-4">
                                    <input id="txtRegistroUbicacionSeccion" type="text" class="form-control" name="Ubicacion" placeholder="Ubicación" autocomplete="off" />
                                </div>
                                <div class="col-4">
                                    <input id="txtRegistroDescripcionSeccion" type="text" class="form-control" name="Descripcion" placeholder="Descripción" autocomplete="off" />
                                </div>
                            </div>
                        </td>
                        <td class="col-1">
                            <button id="GuardarSeccion" type="button" class="btn btn-sm btn-success text-white"><i class="fas fa-play"></i> Guardar</button>
                        </td>
                    </tr>

                </tbody>
            </table>
            <table class="table" id="tSecciones">
                <thead>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>




    </div>
</div>
<div style="text-align:right; margin-top:10px;">
    @*<button id="btn-Guardar" type="button" class="btn btn-success btn-sm x-2"><i class="fas fa-play"></i> Guardar</button>
        <button disabled id="btn-Cancelar" type="button" class="btn btn-secondary btn-sm"><i class="fas fa-times"></i> Cancelar</button>*@
</div>
<div id="mensajeError" class="alert alert-danger" role="alert" style="display: none;">
</div>
<div class="card-header" style="margin-top:15px;">
    <div>
        <h2 class="display-6">
            Listado de Almcanes
            <button id="btn-Actualizar" type="button" class="btn btn-primary btn-sm mx-1"><i class="fas fa-sync"></i> </button>
        </h2>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h5 class="display-8" style="display:inline-block">Busqueda</h5>
        <div class="form-check form-switch" style="display:inline-flex; margin-left:5px;">
            <input id="checkFiltros" class="form-check-input" type="checkbox" style="cursor:pointer" />
        </div>
    </div>
    <div class="card-body p-0">
        <div id="filtrosAlmacens" style="display:none">
            <fieldset>
                <div class="row container-fluid pt-3">
                    <div class="col-sm-6 ">
                        <div class="row p-1">
                            <div class="col-sm-1" style="text-align:right">
                                <input value="Filtro ID" class="form-control-sm" name="grupoFiltros" id="checkFiltroId" type="checkbox" />
                            </div>
                            <label for="checkFiltroId" class="col-sm-2 col-form-label col-form-label-sm">ID</label>
                            <div class="col-sm-9">
                                <input id="txtFiltroIDWhere" type="text" class="form-control form-control-sm" disabled placeholder="Buscar ID en la Tabla...." />
                            </div>
                        </div>
                        <div class="row p-1">
                            <div class="col-sm-1" style="text-align:right">
                                <input value="Filtro Marca" class="form-control-sm" name="grupoFiltros" id="checkFiltroMarca" type="checkbox" />
                            </div>
                            <label for="checkFiltroMarca" class="col-sm-2 col-form-label col-form-label-sm">Marca</label>
                            <div class="col-sm-9" id="contenedorFiltroMarca">
                                <input id="txtFiltroMarcaWhere" type="text" class="form-control form-control-sm" disabled placeholder="Buscar Marca en la Tabla...." />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 ">
                        <div class="row p-1">
                            <div class="col-sm-1" style="text-align:right">
                                <input value="Filtro Nombre" name="grupoFiltros" id="checkFiltroDescripcion" class="form-control-sm" type="checkbox" />
                            </div>
                            <label for="checkFiltroDescripcion" class="col-sm-2 col-form-label col-form-label-sm">Nombre</label>
                            <div class="col-sm-9">
                                <input id="txtFiltroDescripcionWhere" type="text" class="form-control form-control-sm" disabled placeholder="Buscar Nombre en la Tabla...." />
                            </div>
                        </div>
                        <div class="row p-1">
                            <div class="col-sm-1" style="text-align:right">
                                <input value="Filtro Linea" name="grupoFiltros" id="checkFiltroLinea" class="form-control-sm" type="checkbox" />
                            </div>
                            <label for="checkFiltroLinea" class="col-sm-2 col-form-label col-form-label-sm">Linea</label>
                            <div class="col-sm-9" id="contenedorFiltroLinea">
                                <input id="txtFiltroLineaWhere" type="text" class="form-control form-control-sm" disabled placeholder="Buscar Linea en la Tabla...." />
                            </div>
                        </div>
                        <div class="row p-1">
                            <div class="col-sm-12" style="text-align:right">
                                <buton id="btn-buscarTabla" class="btn btn-sm btn-info"><a href="#tabla" class="text-decoration-none text-white"><i class="fas fa-search m-auto me-2"></i>Aplicar</a></buton>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>
<div class="container-fluid">
    <table id="tabla" class="table table-sm table-striped display cell-border" style="width:100%">
        <thead>
            <tr>
                <th id="tablaId">
                    <div class="icono-texto-container">
                        <i id="iconoI" class="fas fa-sort-numeric-down fa-1x m-1"></i>
                        ID
                    </div>
                </th>
                <th id="tablaNombre">
                    <div class="icono-texto-container">
                        <i id="iconoN" class="fas fa-sort-alpha-down fa-1x m-1"></i>
                        Descripcion
                    </div>
                </th>
                <th id="tablaLinea">
                    <div class="icono-texto-container">
                        <i id="iconoL" class="fas fa-sort-alpha-down fa-1x m-1"></i>
                        Ubicacion
                    </div>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>

    </table>

    <div class="row py-2">
        <div class="d-flex justify-content-center m-auto col-5 mx-5">
            <div id="paginadoTabla"></div>
        </div>
    </div>
</div>




@section Scripts {
    <script src="/js/Almacenes/AlmacenesJS.js"></script>

}


