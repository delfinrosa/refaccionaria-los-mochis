
@{
    ViewBag.Title = "Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/css/CssGeneral/General.css" rel="stylesheet" />
<div class="card-header" style="margin-top:15px;">
    <h2 class="display-4">Proveedores</h2>
</div>
<div class="card" style="margin-bottom:10px;">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-auto">
                <div id="buscador">
                    <div class="input-group rounded-2 bg-primary">
                        <input id="txtBusqueda" type="text" class="form-control form-control-sm" placeholder="Buscar proveedor" autocomplete="off">
                        <button id="btn-BuscarBuscador" class="btn btn-sm" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <div style="position:absolute">
                        <div id="botonesPaginado" class="autocomplete-options" style="display: none;">
                        </div>
                        <div id="opcionesLista" class="autocomplete-options" style="display: none;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-auto ">
                <div>
                    <button id="btn-Nuevo" type="button" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Nuevo</button>
                    <button id="btn-Eliminar" type="button" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Eliminar</button>
                    <span id="modo" class="animacion-editar rounded-2 fw-bold" style="display: none;"> Editando <i id="icono-modo" class="fas fa-edit"></i> </span>
                </div>
            </div>
        </div>

    </div>
</div>
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="tabDatosGenerales-tab" data-bs-toggle="tab" data-bs-target="#tabDatosGenerales" type="button" role="tab" aria-controls="tabDatosGenerales" aria-selected="true">
            Datos Generales
            <span id="SpantabDatosGenerales" class="badge rounded-5 bg-danger"></span>
        </button>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane active container-fluid" id="tabDatosGenerales" role="tabpanel" aria-labelledby="home-tab">
        <form>
            <fieldset>
                <div class="row">
                    <div class="col-sm-6 ">

                        <div class="row p-1">
                            <label for="txtRegistroRFC" class="col-sm-2 col-form-label col-form-label-sm">RFC</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroRFC" class=" form-control form-control-sm" type="text" data-requerido="RFC" name="RFC" />
                            </div>
                        </div>

                        <div class="row p-1">
                            <label for="txtRegistroRazonSocial" class="col-sm-2 col-form-label col-form-label-sm">Razon Social</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroRazonSocial" class=" form-control form-control-sm" type="text" data-requerido="Razon Social" name="RazonSocial" />
                            </div>
                        </div>

                        <div class="row p-1">
                            <label for="txtRegistroEstatus" class="col-sm-2 col-form-label col-form-label-sm">Estatus</label>
                            <div class="col-sm-10">
                                <select class="form-select form-select-sm  " id="txtRegistroEstatus" data-requerido="Estatus">
                                    <option value="A">Activo</option>
                                    <option value="D">Desactivo</option>
                                    <option value="O">Oculto</option>
                                </select>
                            </div>
                        </div>

                        <div class="row p-1">
                            <label for="txtRegistroCalle" class="col-sm-2 col-form-label col-form-label-sm">Calle</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroCalle" class=" form-control form-control-sm" type="text" data-requerido="Calle" name="Calle" />
                            </div>
                        </div>

                        <div class="row p-1">
                            <label for="txtRegistroEstado" class="col-sm-2 col-form-label col-form-label-sm">Estado</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroEstado" class=" form-control form-control-sm" type="text" data-requerido="Estado" name="Estado" />
                            </div>
                        </div>

                        <div class="row p-1">
                            <label for="txtRegistroPais" class="col-sm-2 col-form-label col-form-label-sm">Pais</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroPais" class=" form-control form-control-sm" type="text" data-requerido="Pais" name="Pais" />
                            </div>
                        </div>
                        <div class="row p-1">
                            <label for="txtRegistroColonia" class="col-sm-2 col-form-label col-form-label-sm">Colonia</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroColonia" class=" form-control form-control-sm" type="text" data-requerido="Colonia" name="Colonia" />
                            </div>
                        </div>
                        <div class="row p-1">
                            <label for="txtRegistroCiudad" class="col-sm-2 col-form-label col-form-label-sm">Ciudad</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroCiudad" class=" form-control form-control-sm" type="text" data-requerido="Ciudad" name="Ciudad" />
                            </div>
                        </div>

                    </div>

                    <div class="col-sm-6 ">

                        <div class="row p-1">
                            <label for="txtRegistroCP" class="col-sm-2 col-form-label col-form-label-sm">Codigo Postal</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroCP" class=" form-control form-control-sm" type="text" data-requerido="Codigo Postal" name="CodigoPostal" />
                            </div>
                        </div>

                        <div class="row p-1">
                            <label for="txtRegistroNumeroInt" class="col-sm-2 col-form-label col-form-label-sm">Numero Int</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroNumeroInt" class=" form-control form-control-sm" type="text" data-requerido="Numero Int" name="NumeroInterior" />
                            </div>
                        </div>

                        <div class="row p-1">
                            <label for="txtRegistroNumeroExt" class="col-sm-2 col-form-label col-form-label-sm">Numero Ext</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroNumeroExt" class=" form-control form-control-sm" type="text" data-requerido="Numero Ext" name="NumeroExterior" />
                            </div>
                        </div>

                        <div class="row p-1">
                            <label for="txtRegistroTelefono" class="col-sm-2 col-form-label col-form-label-sm">Telefono</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroTelefono" class=" form-control form-control-sm" type="text" data-requerido="Telefono" name="Telefono" />
                            </div>
                        </div>

                        <div class="row p-1">
                            <label for="txtRegistroCorreo" class="col-sm-2 col-form-label col-form-label-sm">Correo</label>
                            <div class="col-sm-10">
                                <input id="txtRegistroCorreo" class=" form-control form-control-sm" type="text" data-requerido="Correo" name="Correo"/>
                            </div>
                        </div>

                        <div class="row p-1">
                            <label for="txtRegistroComentario" class="col-sm-2 col-form-label col-form-label-sm">Comentario</label>
                            <div class="col-sm-10">
                            <textarea id="txtRegistroComentario" class="form-control form-control-sm" style="height: 110px; resize: none;" name="Comentarios"></textarea>
                            </div>
                        </div>

                    </div>
                </div>
            </fieldset>
        </form>

    </div>
</div>
<div style="text-align:right; margin-top:10px;">
    <button disabled id="btn-Guardar" type="button" class="btn btn-success btn-sm x-2"><i class="fas fa-play"></i> Guardar</button>
    <button disabled id="btn-Cancelar" type="button" class="btn btn-secondary btn-sm"><i class="fas fa-times"></i> Cancelar</button>
</div>
<div id="mensajeError" class="alert alert-danger" role="alert" style="display: none;">
</div>
<div class="card-header" style="margin-top:15px;">
    <div>
        <h2 class="display-6">
            Listado de Proveedores
            <button id="btn-Actualizar" type="button" class="btn btn-primary btn-sm mx-1"><i class="fas fa-sync"></i> </button>
        </h2>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h5 class="display-8" style="display:inline-block">Busqueda</h5>
        <div class="form-check form-switch" style="display:inline-flex; margin-left:5px;">
            <input id="checkFiltros" class="form-check-input" type="checkbox" style="cursor:pointer" />
        </div>
    </div>
    <div class="card-body p-0">
        <div id="filtrosProveedor" style="display:none">
            <form>
                <fieldset>
                    <div class="row container-fluid pt-3">
                        <div class="col-sm-6 ">
                            <div class="row p-1">
                                <div class="col-sm-1" style="text-align:right">
                                    <input value="Filtro Telefono" class="form-control-sm" name="grupoFiltros" id="checkFiltroTelefono" type="checkbox" />
                                </div>
                                <label for="checkFiltroTelefono" class="col-sm-2 col-form-label col-form-label-sm">Telefono</label>
                                <div class="col-sm-9">
                                    <input id="txtFiltroTelefonoWhere" type="text" class="form-control form-control-sm" disabled placeholder="Buscar Telefono en la Tabla...." />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 ">
                            <div class="row p-1">
                                <div class="col-sm-1" style="text-align:right">
                                    <input value="Filtro Razon Social" name="grupoFiltros" id="checkFiltroRazonSocial" class="form-control-sm" type="checkbox" />
                                </div>
                                <label for="checkFiltroRazonSocial" class="col-sm-2 col-form-label col-form-label-sm">Razon Social</label>
                                <div class="col-sm-9">
                                    <input id="txtFiltroRazonSocialWhere" type="text" class="form-control form-control-sm" disabled placeholder="Buscar Nombre en la Tabla...." />
                                </div>
                            </div>
                            <div class="row p-1">
                                <div class="col-sm-12" style="text-align:right">
                                    <buton id="btn-buscarTabla" class="btn btn-sm btn-info"><a href="#tabla" class="text-decoration-none text-white"><i class="fas fa-search m-auto me-2"></i>Aplicar</a></buton>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<div class="container-fluid">
    <table id="tabla" class="table table-sm table-striped display cell-border" style="width:100%">
        <thead>
            <tr>

                <th id="tablaRazonSocial">
                    <div class="icono-texto-container">
                        <i id="iconoRazonSocial" class="fas fa-sort fa-1x m-1"></i>
                        RazonSocial
                    </div>
                </th>

                <th>
                    RFC
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Correo
                </th>

                <th></th>

            </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
            <tr>
                <th>
                    <div class="row justify-content-center">
                        <div id="paginadoTabla">
                        </div>
                    </div>
                </th>
            </tr>
        </tfoot>
    </table>
</div>

@section Scripts {
    <script src="~/js/Proveedor/Proveedor.js"></script>
}


